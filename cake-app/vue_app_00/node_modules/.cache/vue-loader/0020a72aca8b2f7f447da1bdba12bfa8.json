 <div class=\"price\">\r\n            市场价:<span>￥1111</span>&nbsp;&nbsp;销售价:<span>￥111</span>\r\n          </div>\r\n          <div class=\"numbox\">\r\n            <div>购买数量</div>\r\n            <div class=\"mui-numbox\">\r\n              <button class=\"mui-btn mui-btn-numbox-minus\" type=\"button\" @click=\"goodsSub\">-</button>\r\n              <input class=\"mui-input-numbox\" type=\"number\" value=\"1\" v-model=\"val\" readonly />\r\n              <button class=\"mui-btn mui-btn-numbox-plus\" type=\"button\" @click=\"goodsAdd\">+</button>\r\n            </div>\r\n          </div>\r\n          <div class=\"btn\">\r\n            <mt-button size=\"small\" type=\"primary\" @click=\"getGoodsInfo()\">立即购买</mt-button>&nbsp;&nbsp;<mt-button size=\"small\" type=\"primary\" @click=\"addCart()\">加入购物车</mt-button>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n    <div class=\"mui-card\">\r\n      <div class=\"mui-card-header\">商品参数</div>\r\n      <div class=\"mui-card-content\">\r\n        <div class=\"mui-card-content-inner\">\r\n          <p>商品货号：1111111111</p>\r\n          <p>商品货号：1111111111</p>\r\n          <p>商品货号：1111111111</p>\r\n          <p>商品货号：1111111111</p>          \r\n        </div>\r\n      </div>\r\n      <div class=\"mui-card-footer\"><mt-button>图文介绍</mt-button><mt-button>商品评论</mt-button></div>\r\n    </div>\r\n  </div>\r\n</template>\r\n<script>  \r\n  import swiper from '../sub/swiper.vue';\r\n  import {Toast} from 'mint-ui';\r\n\r\n  export default {\r\n    data(){\r\n      return {\r\n        id:this.$route.params.id,\r\n        list:[],\r\n        val:1,\r\n        info:[],\r\n      }\r\n    },\r\n    created() {\r\n       this.axios.get(\"http://127.0.0.1:3000/getImages\").then(result=>{\r\n        this.list=result.data;\r\n        this.addCart();\r\n        this.getGoodsInfo();\r\n      })\r\n    },\r\n    methods:{\r\n      getGoodsInfo(){\r\n        //console.log(123)\r\n        var id=this.id;\r\n        var url=\"http://127.0.0.1:3000/getProduct?id=\"+\"id\";\r\n        this.axios.get(url).then(result=>{\r\n          this.info=result.data.data;\r\n        })\r\n      },\r\n      addCart(){ \r\n        //获取四个参数 \r\n        var uid=1;//自己先给一个值\r\n        var pid=this.id; //当前登录用户\r\n        var count=this.val;//商品数量\r\n        var price=99; //先写死一个值\r\n        //发送请求到服务器\r\n        var url=\"http://127.0.0.1:3000/addCart/\";\r\n        this.axios.get(url,{\r\n          params:{\r\n            uid,pid,count,price\r\n          }\r\n        }).then(result=>{\r\n         // console.log(result.data) 测试完了添加成功\r\n        if(result.code>0){Toast(result.data.msg);\r\n        }else{Toast(result.data.msg)}\r\n        })\r\n      },\r\n      goodsAdd(){\r\n        if(this.val>=1 && this.val<=998)\r\n        this.val++;\r\n      },\r\n      goodsSub(){\r\n        if(this.val>1)\r\n        this.val--;\r\n      }\r\n    },\r\n    components:{\r\n      \"swiper-box\":swiper\r\n    }\r\n  }\r\n</script>\r\n<style scoped>\r\n  .app-goodsinfo .price{ font-size:14px; color:#666; padding:10px 0 15px; }\r\n  .app-goodsinfo .price span:first-child{ text-decoration:line-through;}\r\n  .app-goodsinfo .price span:last-child{ font-weight:bold; color:#f00; }\r\n  .app-goodsinfo .numbox div:first-child{ color:#666; }\r\n  .app-goodsinfo .btn{ margin-top:10px;}\r\n  .app-goodsinfo .btn .mint-button{ font-size:14px; }\r\n</style>"]}]}